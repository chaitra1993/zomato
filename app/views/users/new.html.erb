
<h3>Add User</h3>

<%= form_for @user do |f| %>

<%= f.label :name %><br/>
<%= f.text_field :name %></br> 

<%= f.label :email %><br/>
<%= f.email_field :email %><br/>

<%= f.label :password %><br/>
<%= f.text_field :password %><br/>

<%= f.label :role %><br/>
<%= f.collection_check_boxes :role_ids, Role.all, :id, :name %><br/>

<%= f.submit %>

<% end %>